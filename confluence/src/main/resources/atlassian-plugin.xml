<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>

    <!-- Export HSQL DataSourceProvider for ActiveObjects plugin's use -->
    <component name="activeobjects-datasourceprovider-confluence" key="dataSourceProvider"
               class="com.atlassian.confluence.plugin.spi.activeobjects.ConfluenceDataSourceProvider" public="true">
        <interface>com.atlassian.activeobjects.spi.DataSourceProvider</interface>
    </component>

</atlassian-plugin>
