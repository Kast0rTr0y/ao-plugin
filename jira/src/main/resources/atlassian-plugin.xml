<atlassian-plugin key="com.atlassian.activeobjects.jira.spi"
                  name="JIRA Active Objects SPI implementation" system="false" pluginsVersion="2">
    <plugin-info>
        <description>A plugin that provides the DataSourceProvider service</description>
        <vendor name="Atlassian Software Systems" url="http://www.atlassian.com"/>
        <version>${project.version}</version>
    </plugin-info>

    <component key="dataSourceProvider" class="com.atlassian.activeobjects.jira.JiraDataSourceProvider" name="Data Source Provider" public="true">
        <interface>com.atlassian.activeobjects.spi.DataSourceProvider</interface>
    </component>

    <component key="databaseTypeExtractor" class="com.atlassian.activeobjects.jira.JiraDatabaseTypeExtractorImpl" name="Database Type Extractor"/>
</atlassian-plugin>
