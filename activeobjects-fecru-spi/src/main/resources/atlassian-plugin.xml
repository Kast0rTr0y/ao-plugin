<atlassian-plugin key="com.atlassian.activeobjects.fecru.spi"
                  name="FishEye/Crucible Active Objects SPI implementation" system="false" pluginsVersion="2">
    <plugin-info>
        <description>A plugin that provides the DataSourceProvider service for Active Objects</description>
        <vendor name="Atlassian Software Systems" url="http://www.atlassian.com"/>
        <version>${project.version}</version>
    </plugin-info>

    <component key="dataSourceProvider" class="com.atlassian.activeobjects.fecru.FecruDataSourceProvider"
               name="Data Source Provider" public="true">
        <interface>com.atlassian.activeobjects.spi.DataSourceProvider</interface>
    </component>

    <component-import key="sessionConnectionProvider"
                      interface="com.cenqua.crucible.hibernate.SessionConnectionProvider"
                      name="Session Connection Provider"/>

</atlassian-plugin>
